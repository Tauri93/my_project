{% extends 'base.html.twig' %}

{% block title %}Mes ingrédients !
{% endblock %}

{% block body %}


	<div class="container mt-4">
		<h1>Mes ingrédients</h1>
		<h4 class="count text-end pe-2 mb-2">
			<small class="text-body-secondary">Il y a</small>
			{{ ingredients.getTotalItemCount }}
			<small class="text-body-secondary">ingrédients au total !!!</small>
		</h4>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Référence</th>
					<th scope="col">Nom</th>
					<th scope="col">Prix</th>
					<th scope="col">Date</th>
				</tr>
			</thead>
			<tbody>
				{% for item in ingredients%}
					<tr class="table-primary">
						<th class="ps-4" scope="row">{{item.id}}</th>
						<td>{{item.name}}</td>
						<td>{{item.price}}</td>
						<td>{{item.createdAt|date('d/m/Y')}}</td>
					</tr>
				{% endfor %}


			</tbody>
		</table>
		{# display navigation #}
		<div class="navigation d-flex justify-content-center">

			{{ knp_pagination_render(ingredients) }}
		</div>


	</div>
{% endblock %}
